{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<main class="container">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
     <h1 class="text-center mt-5 mb-5">Connectez-vous</h1>
    <form action="{{ path('login') }}" method="post">
        <label for="username" class="form-label">Email:</label>
        <input type="text" id="username" class="form-control mb-5" name="_username" value="{{ last_username }}"/>

        <label for="password" class="form-label">Password:</label>
        <input type="password" id="password" class="form-control mb-3" name="_password"/>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <button type="submit">login</button>
    </form>
</main>
{% endblock %}
